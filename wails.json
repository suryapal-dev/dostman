    "name": "Suryapal Rao",
    "email": "rao.suryapal.23@gmail.com"
  },
  "info": {
    "productName": "Dostman",
    "productVersion": "1.0.0",
    "copyright": "Copyright Â© 2025",
    "comments": "Built with Wails",
    "companyName": "Suryapal Rao"
  },
  "nsisType": "single",
  "obfuscated": true,
  "garbleargs": "-tiny -literals -seed=random",
